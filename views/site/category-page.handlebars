          <h3 class="mb-3">Latest Posts</h3>

          {{#each posts}}
          <!-- single post -->
          <div class="widget-post">
            <a href="#">
              <img class="img-fluid" img src="/{{post_image}}" alt="" />{{this.title}}
            </a>
            <ul class="blog-meta">
              <li>{{generateDate date 'MMM DD YYYY '}}</li>
            </ul>
          </div>

