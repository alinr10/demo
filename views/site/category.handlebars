<!doctype html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>Kategoriler</title>
    <link rel="stylesheet" href="css/adminstyle.css">
</head>

<body>
    <div class="admin-panel">
        <div class="sidebar">
            <h2>Admin Panel</h2>
            <ul>
                <li><a href="admin">Ana Sayfa</a></li>
                <li><a href="posts">Postlar</a></li>
                <li><a href="category">Kategoriler</a></li>
                <li><a href="#">Ayarlar</a></li>
            </ul>
        </div>
        <div class="content">
            <h2>Kategoriler</h2>

            <h3>Kategori Ekle</h3>
            <form action="/categories" method="post">
                <input type="text" name="name" placeholder="Kategori Adı" required>
                <button class="button" type="submit">Ekle</button>
            </form>

            <h3>Kategoriler</h3>
            <ul class="category-list">
                {{#each categories}}
                <li>
                    {{name}}
                    <a href="/categories/edit/{{id}}">Düzenle</a>
                    <a href="/categories/delete/{{id}}">Sil</a>
                </li>
                {{/each}}
            </ul>
        </div>
    </div>
</body>

</html>